<% provide(:title, 'perfil') %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1 class='title'>
        <%= @member.name %> 
      </h1>
      <h4>
        <%= @member.email %> 
      </h4>      
      
      <%= line_chart [{name: "calorias gastadas", data: @ddata.map{|calo| [calo.created_at, calo.qcal] }},
{name: "calorias consumidas", data: @ddata.map{|calo| [calo.created_at, calo.ncal] }}]%>

        <div class="col-md-8">
          <% if @member.calos.any? %> <br />
            <strong>Calorias registradas (<%= @member.calos.count %>)</strong>
            <ol class="calos">
              <%= render @calos %>
            </ol>
          <% end %>
          <%= paginate @calos%>
        </div>
    </section>
  </aside>
</div>
 
